---
layout: 'layouts/base.njk'
title: 'blog'
pagination:
    data: collections.posts
    size: 2
    alias: posts
    reverse: true
---
<!-- Page Header-->
        <header class="masthead" style="background-image: url('/assets/img/home-bg.jpg')">
            <div class="overlay"></div>
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 col-md-10 mx-auto">
                        <div class="site-heading">
                            <h1>Clean Blog</h1>
                            <span class="subheading">A Blog Theme by Start Bootstrap</span>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <!-- Main Content-->
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                <h2>Posts</h2>

                <ul>
                   {# {% for post in collections.posts %} #}
                   {% for post in posts %}
                    {# <li><a href="{{post.url }}">{{ post.data.title }}</a></li> #}
                <div class="post-preview">
                    <a href="{{ post.url }}">
                        <h2 class="post-title">{{ post.data.title }}</h2>
                        <h3 class="post-subtitle">{{ post.data.description }}</h3>
                    </a>
                    <p class="post-meta">
                        Posted by
                        <a href="#!">{{ post.data.author }}</a>
                        on {{ post.data.date }}
                    </p>
                </div>
                   {% endfor %}
                </ul>

 
                <!-- Pager-->
                {# <div class="clearfix"><a class="btn btn-primary float-right" href="#!">Older Posts â†’</a></div> #}
                 
                {# <pre>{{ pagination | dump }}</pre> #}
 
                    <nav aria-label="Page navigation example">
                        <ul class="pagination">
                             <li class="page-item {% if pagination.pageNumber==0 %} disabled {% endif %}"><a class="page-link" href="{{ pagination.firstPageLink }}">First</a></li>
                           
                            <li class="page-item {% if pagination.previous==null %} disabled {% endif %}"><a class="page-link" href="{{ pagination.previousPageLink }}">Prev</a></li>
                          
                                {# <li class="page-item active" ><a class="page-link " href="#">{{ pagination.pageNumber+1 }}</a></li> #}
                                <li class="page-item active" ><a class="page-link">{{ pagination.pageNumber+1 }}</a></li>
                                   
                            <li class="page-item {% if pagination.next==null %} disabled {% endif %}"><a class="page-link" href="{{ pagination.nextPageLink }}">Next</a></li>
                              
                            <li class="page-item {{ '' if pagination.next else 'disabled' }}"><a class="page-link" href="{{ pagination.lastPageLink }}">Last</a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
        <hr />